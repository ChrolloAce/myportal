rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Submissions rules
    match /submissions/{submissionId} {
      // Allow authenticated users to create submissions
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.creatorId;
        
      // Allow users to read their own submissions
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.creatorId;
        
      // Allow authenticated users to list their own submissions
      allow list: if request.auth != null 
        && request.auth.uid in request.resource.data.creatorId;
        
      // Admins can read and update any submission (simplified)
      allow read, write, list: if request.auth != null;
      
      // Allow updates to submissions (for admin actions)
      allow update: if request.auth != null;
    }
    
    // Corporation rules
    match /corporations/{corporationId} {
      // Allow ANYONE to read corporation info (needed for invite pages)
      allow read: if true;
      
      // Allow corporation owners/admins to update
      allow create, update: if request.auth != null;
    }
    
    // Corporation invites rules
    match /corporationInvites/{inviteId} {
      // Allow anyone to read invites (needed for invite links to work)  
      allow read: if true;
      
      // Allow corporation admins to create/update invites
      allow create, update: if request.auth != null;
    }
    
    // Corporation members rules
    match /corporationMembers/{memberId} {
      // Allow authenticated users to read corporation members
      allow read: if request.auth != null;
      
      // Allow users to create membership records (when joining)
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
        
      // Allow corporation admins to update member status
      allow update: if request.auth != null;
    }
    
    // Allow all authenticated users to read and write for now (we'll tighten later)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}